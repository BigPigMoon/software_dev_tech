@page "/"

<PageTitle>Home</PageTitle>

<h1>Выбирите карту</h1>

<ul>
    @foreach (var card in _cards)
    {
        <li>
            <NavLink href=@($"/card/{card}")>
                <span>@card</span>
            </NavLink>
        </li>
    }
</ul>

@code {

    private List<Guid> _cards = new List<Guid>()
    {
        Guid.NewGuid(),
        Guid.NewGuid(),
        Guid.NewGuid(),
        Guid.NewGuid(),
        Guid.NewGuid(),
        Guid.NewGuid(),
        Guid.NewGuid(),
        Guid.NewGuid(),
    };

}